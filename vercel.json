{
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/predict",
            "destination": "/backend/main.py"
        },
        {
            "source": "/docs",
            "destination": "/backend/main.py"
        },
        {
            "source": "/openapi.json",
            "destination": "/backend/main.py"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}